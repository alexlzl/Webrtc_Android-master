<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tv_from_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="from姓名"
        android:text="Alice" />

    <EditText
        android:id="@+id/tv_from"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="from账号"
        android:text="11(发起端ID)" />

    <EditText
        android:id="@+id/tv_to_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="to姓名"
        android:text="Bob" />

    <EditText
        android:id="@+id/tv_to"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="to账号"
        android:text="12(接收端ID)" />

    <Button
        android:id="@+id/bt_connect"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="连接websocket" />

    <Button
        android:id="@+id/bt_call"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="视频+语音通话" />
    <Button
        android:id="@+id/bt_call_video"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="视频通话" />
    <Button
        android:id="@+id/bt_call_audio"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="音频通话" />
    <TextView
        android:id="@+id/tv_iscall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="是否接听" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_refuse"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="拒绝" />

        <Button
            android:id="@+id/bt_recall"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="同意" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">
       <LinearLayout
           android:layout_weight="1"
           android:orientation="vertical"
           android:layout_width="0dp"
           android:layout_height="200dp">
           <TextView
               android:layout_gravity="center_horizontal"
               android:textColor="@android:color/holo_red_dark"
               android:id="@+id/me"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="本地视频" />
           <org.webrtc.SurfaceViewRenderer
               android:layout_margin="16dp"
               android:id="@+id/LocalSurfaceView"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:layout_weight="1" />
       </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="200dp">
            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/holo_red_dark"
                android:id="@+id/remote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="远端视频" />
            <org.webrtc.SurfaceViewRenderer
                android:id="@+id/RemoteSurfaceView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>